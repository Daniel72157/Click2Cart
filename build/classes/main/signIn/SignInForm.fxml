<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="panelFormSignIn" alignment="CENTER" maxWidth="600.0" prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.signIn.SignInFormController">
   <children>
      <Label text="Iniciar Sesion">
         <font>
            <Font name="System Bold Italic" size="30.0" />
         </font>
      </Label>
      <VBox prefHeight="200.0" prefWidth="100.0">
         <VBox.margin>
            <Insets left="50.0" right="50.0" />
         </VBox.margin>
         <children>
            <Label text="Usuario">
               <font>
                  <Font size="20.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="txtUserSignIn" onKeyTyped="#eventKey" prefHeight="37.0" promptText="Ej. Jairo">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Label text="Contraseña">
               <font>
                  <Font size="20.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            <StackPane prefHeight="37.0" prefWidth="300.0">
               <children>
                  <PasswordField fx:id="txtPasswordSignIn" onKeyTyped="#eventKey" prefHeight="37.0" promptText="Ej. 1234">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </PasswordField>
                  <TextField fx:id="txtPasswordSignInMask" onKeyTyped="#eventKey" prefHeight="37.0" promptText="Ej. 1234" visible="false">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
               </children>
            </StackPane>
            <CheckBox fx:id="checkViewPassSignIn" mnemonicParsing="false" text="Ver Contraseña">
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </CheckBox>
            <HBox alignment="CENTER" prefHeight="35.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button fx:id="btnSignIn" mnemonicParsing="false" opacity="0.9" prefWidth="65.0" style="-fx-background-color: #2B398F; -fx-background-radius: 90; -fx-border-radius: 90;" text="Ingresar" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnClean" mnemonicParsing="false" opacity="0.9" prefWidth="65.0" style="-fx-background-color: #2B398F; -fx-background-radius: 90; -fx-border-radius: 90;" text="Limpiar" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
